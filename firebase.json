{
  "rules": {
    ".read": true,
    ".write": true
  },
  "database": {
    "rules": {
      ".read": true,
      ".write": true
    }
  },
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
